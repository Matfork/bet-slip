{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": [
      2,
      {
        "severity": "error"
      }
    ],
    "string-quotes": "double",
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "rules"
    ],
    "order/properties-order": []
  },
  "ignoreFiles": ["dist/**/*", "node_modules/**/*"]
}
